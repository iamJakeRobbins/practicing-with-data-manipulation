<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Movies</title>
  </head>
  <body>
    <h1>Movies</h1>

		{{#each movieData}}
			<h3>{{title}}</h3>
			<h4>by: {{director}}</h4>
			<h4>starring: {{actors}}</h4>
		{{/each}}

    <form action="/addMovie" method="post">
      <label>Title</label>
      <input type="text" name="title" value="">
      <label>Director</label>
      <input type="text" name="director" value="">
      <label>Actor</label>
      <input type="text" name="role" value="">
      <button type="submit">Add Movie</button>
    </form>
  </body>
</html>
